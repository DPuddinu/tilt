---
import SignInButton from '@components/SignInButton.astro';
import LandingLayout from '@layouts/LandingLayout.astro';
---

<LandingLayout title='Home'>
  <section transition:animate='slide' class='grid content-center gap-8'>
    <header>
      <h1
        transition:name='title'
        class='text-balanced text-center text-5xl font-bold tracking-tighter sm:text-5xl xl:text-7xl'>
        Track Your <br /> Learning Today
      </h1>
    </header>
    <article>
      <p class='max-w-[30em] text-center text-xl md:text-2xl'>
        Set learning goals track achievements and generate insightful reports to maximize your growth.
      </p>
    </article>
    <footer class='flex content-center justify-center'>
      <div class='flex flex-col gap-4'>
        <SignInButton className="btn-wide" label='Sign in with GitHub' />
      </div>
    </footer>
  </section>
</LandingLayout>
