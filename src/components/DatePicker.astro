---
type Props = {
  label: string;
  name: string;
  required?: boolean;
  value?: Date | null;
  min?: Date;
};
const { label, name, required = false, value, min } = Astro.props;

export function getInputDateString(date: Date) {
  return date.toISOString().slice(0, 10);
}
---

<div class='flex flex-col gap-2 sm:w-full md:max-w-xs'>
  <label for={name} class='label-text'>{label}</label>
  <input
    placeholder='mm/dd/yyyy'
    required={required}
    type='date'
    id={name}
    name={name}
    value={value ? getInputDateString(value) : undefined}
    min={min ? getInputDateString(min) : undefined}
    class='select-bordered rounded-lg border bg-base-100 px-4 py-2 font-semibold hover:cursor-pointer'
  />
</div>
