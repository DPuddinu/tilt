---
type Props = {
  title: string;
};
const { title } = Astro.props;
---

<div class='flex h-min w-full flex-col gap-4 rounded-box border border-base-300/50 bg-base-200 p-4 shadow'>
  <header class='flex items-center justify-between'>
    <h2 class='text-xl font-medium sm:text-2xl'>{title}</h2>
  </header>
  <slot />
</div>