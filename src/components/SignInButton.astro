---
import { SignIn } from 'auth-astro/components';
type Props = {
  label: string;
  className?: string;
};
const { className, label } = Astro.props;
---

<SignIn
  id='sign-in'
  provider='github'
  options={{
    callbackUrl: '/goals'
  }}
  class={`${className} min-w-32 rounded-2xl btn btn-primary disabled:!bg-primary  disabled:text-base-300`}>
  {label}</SignIn
>

<script>
  const buttons = document.querySelectorAll<HTMLButtonElement>('#sign-in');
  const spinner = document.createElement('span');
  spinner.classList.add('loading', 'loading-spinner', 'loading-md');

  // Add event listeners to fire confetti when a button is clicked.
  buttons.forEach((button) => {
    button.addEventListener('mousedown', () => {
      button.textContent = '';
      button.appendChild(spinner);
    });
  });
</script>
