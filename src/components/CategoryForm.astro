---
import type { ValidationErrors } from '@/types/formValidation.types';
import type { TCategory } from 'db/config';
import TextInput from './TextInput.astro';

type Props = {
  category?: TCategory;
  validationErrors?: ValidationErrors;
};
const { category, validationErrors } = Astro.props;
---

<form method='post'>
  <div class='flex flex-col gap-2'>
    <label for='create-category' class='label-text lg:text-base'>Insert new Category</label>
    <div class='flex flex-col gap-2'>
      <div class='flex gap-2'>
        <TextInput value={category?.name} id='create-category' name='name' placeholder='Category Name' />
        <button class='btn'>Create</button>
      </div>
      {validationErrors?.title && <span class='px-2 text-red-500'>{validationErrors?.title}</span>}
    </div>
  </div>
</form>
