---
type Props = {
  HTMLFor: string;
  label: string;
  errors: string[] | undefined;
  className?: string;
};
const { label, errors = [], HTMLFor, className } = Astro.props;
---

<div class={`flex flex-col gap-2 ${className}`}>
  <label for={HTMLFor}>{label}</label>
  <slot />
  {errors.map((error) => <span class='h-6 text-error'>{error}</span>)}
</div>
