---
type Props = {
  label: string;
  name: string;
  checked?: boolean;
  disabled?: boolean;
  className?: string;
};
const { label, name, checked = false, disabled = false, className = '' } = Astro.props;
---

<div class={`flex flex-row-reverse items-center justify-end gap-4 ${className}`}>
  <label for={name} class='label-text'>{label}</label>
  <input disabled={disabled} id={name} name={name} type='checkbox' class='checkbox hover:border-base-content transition-colors' checked={checked} />
</div>
