---
import '@/styles/commons.css';
import Dropdown from '@components/Dropdown.astro';
import SignOut from '@components/SignOutButton.astro';
import '@fontsource/inter';
const { user } = Astro.locals;
type Props = {
  pageName?: string;
};
const { pageName } = Astro.props;
const links = ['Activities', 'Goals', 'Reports'];
---

<html>
  <head>
    <meta charset='utf-8' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <meta name='viewport' content='width=device-width' />
    <meta name='generator' content={Astro.generator} />
    <title>{pageName}</title>
  </head>
  <body class='flex h-dvh flex-col bg-base-content/5'>
    <header class='h-fit bg-base-300'>
      <div
        class='navbar justify-between border border-b border-base-300 border-base-300/50 p-2 pl-6 shadow-md shadow-base-300/50'>
        <label for='my-drawer' class='drawer-button hover:scale-105 hover:cursor-pointer'>
          <svg
            xmlns='http://www.w3.org/2000/svg'
            fill='none'
            viewBox='0 0 24 24'
            stroke-width='2'
            stroke='currentColor'
            class='h-6 w-6'>
            <path stroke-linecap='round' stroke-linejoin='round' d='M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25H12'></path>
          </svg>
        </label>
        <Dropdown>
          <button
            slot='trigger'
            class='btn btn-circle border-slate-700 bg-slate-700 hover:border-slate-600 hover:bg-slate-600'>
            {user.name[0]}
          </button>
          <div slot='content'>
            <li>
              <a class='flex h-8 p-0 active:bg-transparent'>
                <SignOut />
              </a>
            </li>
          </div>
        </Dropdown>
      </div>
    </header>
    <main class='flex-container z-10' transition:animate='fade' transition:name='main'>
      <div class='content drawer h-full'>
        <input id='my-drawer' type='checkbox' class='drawer-toggle' />
        <div class='drawer-content p-8'>
          <slot />
        </div>
        <div class='drawer-side' transition:name='drawer' transition:persist>
          <label for='my-drawer' aria-label='close sidebar' class='drawer-overlay'></label>
          <ul
            class='menu z-20 flex min-h-full w-80 grow flex-col border border-base-300/50 bg-base-200 p-4 text-base-content shadow'>
            <div>
              <div class='flex h-24 w-full items-center justify-center'>
                <h3 class='text-3xl italic'>TYLT</h3>
              </div>
              <div class='border border-base-content opacity-50'></div>
              <div class='py-4'>
                <li class='hidden text-lg font-bold sm:block'><a data-astro-prefetch href='/goals'>Goals</a></li>
                <li class='hidden text-lg font-bold sm:block'>
                  <a data-astro-prefetch href='/activities'>Activities üèóÔ∏è</a>
                </li>
                <li class='hidden text-lg font-bold sm:block'><a data-astro-prefetch href='/reports'>Reports üèóÔ∏è</a></li>
                <li class='text-lg font-bold'>
                  <a data-astro-prefetch href='/changelog'>Changelog</a>
                </li>
                <li class='disabled text-lg font-bold'><a>Settings üèóÔ∏è</a></li>
              </div>
            </div>
            <div class='flex grow flex-col justify-end'>
              <SignOut className='btn btn-error w-full'> Logout </SignOut>
            </div>
          </ul>
        </div>
      </div>
    </main>
    {
      pageName && (
        <footer
          transition:name='footer'
          transition:persist
          role='tablist'
          class='tabs-boxed tabs grid h-[4.65rem] w-full grid-cols-3 items-center justify-between rounded-b-none bg-base-300 px-3 sm:hidden'>
          {links.map((link) => (
            <>
              {link === pageName ? (
                <a role='link' class={`tab h-3/4 text-base font-bold ${pageName === link && 'tab-active'}`}>
                  {link}
                </a>
              ) : (
                <a
                  href={`/${link.toLowerCase()}`}
                  role='link'
                  class={`tab h-3/4 text-base font-bold ${pageName === link && 'tab-active'}`}>
                  {link}
                  data-astro-prefetch
                </a>
              )}
            </>
          ))}
        </footer>
      )
    }
  </body>
</html><style>
  @view-transition {
    navigation: auto; /* enabled! */
  }
</style>
