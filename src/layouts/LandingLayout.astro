---
import '@/styles/commons.css';
import { seoConfig } from '@/utils/seoConfig';
import SignInButton from '@components/SignInButton.astro';
import '@fontsource/inter';
import { SEO } from 'astro-seo';

const pathName = Astro.url.pathname;
const { title } = Astro.props;
---

<html lang='en'>
  <head>
    <SEO
      title={title}
      description={seoConfig.description}
      noindex={false}
      nofollow={false}
      openGraph={{
        basic: {
          title: title,
          type: 'website',
          image: seoConfig.image.url
        },
        image: {
          width: seoConfig.image.width,
          height: seoConfig.image.height,
          alt: seoConfig.image.alt
        },
        optional: {
          siteName: seoConfig.siteName,
          description: seoConfig.description
        }
      }}
    />
    <meta charset='utf-8' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <meta name='viewport' content='width=device-width' />
    <meta name='generator' content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class='grid min-h-screen grid-rows-[auto_1fr_auto] bg-base-300'>
    <header class='sticky top-0 z-10 bg-base-300'>
      <div class='navbar border-b border-b-base-100'>
        <div class='navbar-start'>
          <div class='dropdown'>
            <div tabindex='0' role='button' class='btn btn-ghost lg:hidden'>
              <svg
                xmlns='http://www.w3.org/2000/svg'
                class='h-5 w-5'
                fill='none'
                viewBox='0 0 24 24'
                stroke='currentColor'>
                <path stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M4 6h16M4 12h8m-8 6h16'></path>
              </svg>
            </div>
            <ul class='menu dropdown-content menu-sm z-[1] mt-3 w-52 rounded-box bg-base-300 p-2'>
              <li>
                <a
                  data-astro-prefetch
                  role='link'
                  aria-disabled={pathName === '/features'}
                  href={pathName === '/features' ? '#' : '/features'}>
                  Features
                </a>
              </li>
            </ul>
          </div>
          <a
            data-astro-prefetch
            role='link'
            aria-disabled={pathName === '/'}
            class='text-base italic'
            href={pathName === '/' ? undefined : '/'}>
            TYLT
          </a>
        </div>
        <div class='navbar-center hidden lg:flex'>
          <ul class='menu menu-horizontal px-1'>
            <li>
              <a
                data-astro-prefetch
                role='link'
                aria-disabled={pathName === '/features'}
                href={pathName === '/features' ? undefined : '/features'}>
                Features
              </a>
            </li>
          </ul>
        </div>
        <div class='navbar-end'>
          <SignInButton className='btn-ghost btn-sm !bg-transparent' label='Sign in' />
        </div>
      </div>
    </header>

    <main class='flex flex-col items-center justify-center gap-12 bg-base-content/5 px-8'>
      <slot />
    </main>
    <footer class='h-16 w-full content-center border-t border-t-base-100 text-center font-mono text-sm opacity-85'>
      Dario Puddinu 2024
    </footer>
  </body>
</html>
<style>
  @view-transition {
    navigation: auto; /* enabled! */
  }
</style>
